class Solution {
    public int canCompleteCircuit(int[] gas, int[] cost) {
        int n = gas.length;
        int total = 0;      // total gas - total cost across all stations
        int tank = 0;       // current tank since candidate start
        int start = 0;      // candidate start index

        for (int i = 0; i < n; i++) {
            int diff = gas[i] - cost[i];
            total += diff;
            tank += diff;

            // If tank < 0, cannot start from current 'start' to reach i
            if (tank < 0) {
                start = i + 1; // try next station as start
                tank = 0;      // reset tank for new candidate
            }
        }

        return (total >= 0) ? start % n : -1;
    }
}
