class Solution {
    public List<Integer> getRow(int rowIndex) {
        List<Integer> row = new ArrayList<>();
        row.add(1); // row 0

        for (int i = 1; i <= rowIndex; i++) {
            // add a dummy element at end (will be updated)
            row.add(0);

            // update from right to left
            for (int j = i; j > 0; j--) {
                row.set(j, row.get(j) + row.get(j - 1));
            }
        }

        return row;
    }
}
