class Solution {
    public long zeroFilledSubarray(int[] nums) {
            long count = 0;
        long consecutive = 0;

        for (int n : nums) {
            if (n == 0) {
                consecutive++;            // extend streak
                count += consecutive;     // add new subarrays
            } else {
                consecutive = 0;          // reset when non-zero
            }
        }
        return count;
    }
}
