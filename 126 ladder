class Solution {
    public List<List<String>> findLadders(String beginWord, String endWord, List<String> wordList) {
        Set<String> dict = new HashSet<>(wordList);
        List<List<String>> result = new ArrayList<>();
        if (!dict.contains(endWord)) return result;

        // Data structures
        Map<String, List<String>> graph = new HashMap<>();
        Map<String, Integer> distance = new HashMap<>();

        // BFS to build graph & distances
        bfs(beginWord, endWord, dict, graph, distance);

        // DFS to build all shortest paths
        List<String> path = new ArrayList<>();
        path.add(beginWord);
        dfs(beginWord, endWord, graph, distance, path, result);

        return result;
    }

    private void bfs(String begin, String end, Set<String> dict,
                     Map<String, List<String>> graph,
                     Map<String, Integer> distance) {

        Queue<String> q = new LinkedList<>();
        q.offer(begin);
        distance.put(begin, 0);

        for (String word : dict) {
            graph.put(word, new ArrayList<>());
        }
        graph.put(begin, new ArrayList<>());

        while (!q.isEmpty()) {
            int size = q.size();
            boolean foundEnd = false;

            for (int i = 0; i < size; i++) {
                String cur = q.poll();
                int curDist = distance.get(cur);

                for (String next : getNeighbors(cur, dict)) {
                    graph.get(cur).add(next);
                    if (!distance.containsKey(next)) {
                        distance.put(next, curDist + 1);
                        q.offer(next);
                        if (next.equals(end)) foundEnd = true;
                    }
                }
            }
            if (foundEnd) break; // Only shortest paths needed
        }
    }

    private void dfs(String cur, String end,
                     Map<String, List<String>> graph,
                     Map<String, Integer> distance,
                     List<String> path,
                     List<List<String>> result) {

        if (cur.equals(end)) {
            result.add(new ArrayList<>(path));
            return;
        }

        for (String next : graph.get(cur)) {
            if (distance.get(next) == distance.get(cur) + 1) {
                path.add(next);
                dfs(next, end, graph, distance, path, result);
                path.remove(path.size() - 1);
            }
        }
    }

    private List<String> getNeighbors(String word, Set<String> dict) {
        List<String> res = new ArrayList<>();
        char[] arr = word.toCharArray();

        for (int i = 0; i < arr.length; i++) {
            char old = arr[i];
            for (char c = 'a'; c <= 'z'; c++) {
                if (c == old) continue;
                arr[i] = c;
                String newWord = new String(arr);
                if (dict.contains(newWord)) res.add(newWord);
            }
            arr[i] = old;
        }
        return res;
    }
}
